{
  "name": "@jameskabz/nextcraft-ui",
  "version": "0.1.3",
  "description": "Next.js + Tailwind UI components with a bold, crafted aesthetic.",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/James-Kabz/nextcraft-ui.git"
  },
  "homepage": "https://github.com/James-Kabz/nextcraft-ui#readme",
  "bugs": {
    "url": "https://github.com/James-Kabz/nextcraft-ui/issues"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "next dev",
    "build": "tsup && npm run build:css",
    "build:css": "tailwindcss -i ./src/app/globals.css -o ./dist/styles.css",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.lib.json --noEmit",
    "test:unit:run": "echo \"No unit tests specified\"",
    "test:coverage": "echo \"No coverage configured\""
  },
  "peerDependencies": {
    "lucide-react": "^0.542.0",
    "next": "^16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "lucide-react": "^0.542.0",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "typescript": "^5"
  }
}
